{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom","dom.iterable", "scripthost", "es2020"],
    "skipLibCheck": true,
    "outDir": "dist",
    "disableSizeLimit": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
